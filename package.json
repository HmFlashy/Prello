{
  "name": "prello",
  "description": "Project manager using boards, lists and cards",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "./node_modules/.bin/nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "init:db": "node api/config/initDB.js",
    "install:all:prod": "npm install --production && cd client && npm install --production",
    "install:all:dev": "npm install && cd client && npm install",
    "client:build": "cd client && npm run build:production",
    "deploy": "sh ./deploy.sh"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "express": "^4.16.2",
    "helmet": "^3.14.0",
    "history": "^4.7.2",
    "mongoose": "^5.3.3",
    "prop-types": "^15.6.2",
    "redux-thunk": "^2.3.0",
    "socket.io": "^2.1.1",
    "socket.io-redis": "^5.2.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.18.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HmFlashy/prello.git"
  },
  "license": "ISC"
}
