{
  "name": "prello",
  "description": "Project manager using boards, lists and cards",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "install:all:prod": "npm install --only=production && cd client && npm install --only=production",
    "install:all:dev": "npm install && cd client && npm install"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.2",
    "helmet": "^3.14.0",
    "mongoose": "^5.3.3",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HmFlashy/prello.git"
  },
  "license": "ISC"
}
